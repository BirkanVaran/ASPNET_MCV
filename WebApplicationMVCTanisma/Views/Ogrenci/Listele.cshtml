@using WebApplicationMVCTanisma.Models;
@{
    ViewBag.Title = "Listele";
}

@{
    int siraNo = 0;
}


<h2>Tüm Öğrenciler</h2>
<br />
<table class="table table-hover">
    <tr>
        <th>Sıra No</th>
        <th>Adı</th>
        <th>Soyadı</th>
        <th>Doğum Tarihi</th>
        <th>İşlem 1</th>
        <th>İşlem 2</th>
    </tr>
    @{
        foreach (Ogrenci item in Model)
        {
            <tr>
                <td>@(++siraNo)</td>
                <td>@(item.Ad)</td>
                <td>@(item.Soyad)</td>
                <td>@(item.DogumTarihi.ToString("dd.MM.yyyy"))</td>
                <td>
                    <a class="btn btn-warning" href="/Ogrenci/Guncelle/@item.Id">Güncelle</a>
                </td>
                <td>
                    <a class="btn btn-danger" href="/Ogrenci/Sil/@item.Id">Sil</a>
                </td>
            </tr>

        }
    }

</table>

<br />

<a href="/Ogrenci/Ekle" class="btn btn-success">Yeni Öğrenci</a>
